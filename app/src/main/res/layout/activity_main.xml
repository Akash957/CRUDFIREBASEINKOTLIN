<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:src="@drawable/uidesign"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4F4F4F"
        android:layout_marginBottom="10dp"
        android:text="Sign In To Continue"
        android:textSize="20sp"
        android:layout_gravity="center"
        />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="365dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mobile_edit_text"
            android:layout_width="365dp"
            android:inputType="number"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="+91-" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="365dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/verification_edit_text"
            android:layout_width="365dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Enter OTP" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/sendotp_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:hint="Generate OTP"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/white"
            android:backgroundTint="#2F80ED"/>
        <Button
            android:id="@+id/verify_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:hint="Verify OTP"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            android:backgroundTint="#2F80ED"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Terms and Conditions|Privacy Policy"
        android:textColor="#4F4F4F"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:src="@drawable/design"
        android:scaleType="centerCrop"/>


</LinearLayout>